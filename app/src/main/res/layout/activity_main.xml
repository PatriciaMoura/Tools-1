<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">



     <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ficha Médica"
         android:background="#a1a0a0"
        android:id="@+id/btnFichaMedica" />

    <Button
        android:id="@+id/btnIMC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC"
        android:background="#a1a0a0"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="69dp" />

    <Button
        android:id="@+id/btnSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SpeechToText"
        android:background="#a1a0a0"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="140dp" />

    <Button
        android:id="@+id/btnCalculadora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        android:background="#a1a0a0"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="208dp" />

    <Button
        android:id="@+id/btnCalcularMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Média"
        android:background="#a1a0a0"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="277dp" />


</android.support.constraint.ConstraintLayout>